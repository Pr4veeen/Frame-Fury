<%- include("../../views/partials/admin/header") %>
    <title>Admin Referral Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .referral-code {
            font-family: monospace;
            font-weight: bold;
            background-color: #f0f0f0;
            padding: 2px 4px;
            border-radius: 4px;
        }
        .referral-points {
            font-weight: bold;
            color: #28a745;
        }
        .nav-tabs .nav-link {
            cursor: pointer;
        }
        .table-responsive {
            max-height: 600px;
            overflow-y: auto;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Referral Management</h1>
        
        <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" id="persons-tab" data-bs-toggle="tab" data-bs-target="#persons" type="button" role="tab" aria-controls="persons" aria-selected="true">Persons with Referral Codes</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="referred-tab" data-bs-toggle="tab" data-bs-target="#referred" type="button" role="tab" aria-controls="referred" aria-selected="false">Referred Persons</a>
            </li>
        </ul>
        
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="persons" role="tabpanel" aria-labelledby="persons-tab">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Referral Code</th>
                                <th>Referral Points</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        <%if(users.length >0){%>
                            <%users.forEach(user=>{%>    
                            <tr>
                                <td><%= user.name%></td>
                                <td><%= user.email%></td>
                                <td><span class="referral-code"><%= user.referralCode%></span></td>
                                <td><span class="referral-points"><%= user.referralPoint%></span></td>
                                <td><button class="btn btn-sm btn-primary view-referred" data-code="JOHN123">View Referred</button></td>
                            </tr>
                            <%})%> 
                        <%}else{%>    
                            <tr>
                                <td>There is no user with Referrals..</td>
                            </tr>
                        <%}%>   
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="tab-pane fade" id="referred" role="tabpanel" aria-labelledby="referred-tab">
                <h2 class="mb-3">Referred Persons</h2>
                <div id="referred-persons-list">
                    <p>Select "View Referred" to see details of referred persons.</p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const viewReferredButtons = document.querySelectorAll('.view-referred');
            viewReferredButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const referralCode = this.getAttribute('data-code');
                    const referredTab = document.getElementById('referred-tab');
                    const referredPersonsList = document.getElementById('referred-persons-list');
                    
                    // Simulate fetching referred persons data
                    const referredPersons = getReferredPersons(referralCode);
                    
                    // Update the referred persons list
                    referredPersonsList.innerHTML = `
                        <h3>Referred by code: ${referralCode}</h3>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Date Joined</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    ${referredPersons.map(person => `
                                        <tr>
                                            <td>${person.name}</td>
                                            <td>${person.email}</td>
                                            <td>${person.dateJoined}</td>
                                        </tr>
                                    `).join('')}
                                </tbody>
                            </table>
                        </div>
                    `;
                    
                    // Switch to the Referred Persons tab
                    referredTab.click();
                });
            });
        });

        // Simulated function to get referred persons data
        function getReferredPersons(referralCode) {
            // This is a mock function. In a real application, you would fetch this data from a server.
            const mockData = {
                'JOHN123': [
                    { name: 'Alice Cooper', email: 'alice@example.com', dateJoined: '2023-01-15' },
                    { name: 'Charlie Brown', email: 'charlie@example.com', dateJoined: '2023-02-20' }
                ]
            };
            return mockData[referralCode] || [];
        }
    </script>
</body>
</html>