<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order List</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Custom styles for status color-coding */
    .status-pending {
      background-color: #ffcc00; /* Yellow for Pending */
      color: #fff;
    }
    .status-shipped {
      background-color: #007bff; /* Blue for Shipped */
      color: #fff;
    }
    .status-deliverd {
      background-color: #28a745; /* Green for Delivered */
      color: #fff;
    }
    .status-cancelled {
      background-color: #dc3545; /* Red for Cancelled */
      color: #fff;
    }
    .status-confirmed {
      background-color: #f29a47; /* Orange for Confirmed */
      color: #fff;
    }
    .status-returned{
      background-color: #96e457;
      color: #fff;
    }
    /* Additional styling */
    .order-image {
      width: 50px;
      height: 50px;
      object-fit: cover;
      margin-right: 10px;
    }
    .product-details {
      display: flex;
      align-items: center;
    }
    .table td, .table th {
      vertical-align: middle; /* Ensures vertical alignment */
      text-align: center;
    }
  </style>
</head>
<body>
  <%- include("../../views/partials/admin/header") %>

  <div class="container mt-5">
    <h1 class="mb-4 text-center">Order List</h1>
    <table class="table table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th style="width: 10%;">Order ID</th>
          <th style="width: 15%;">Customer</th>
          <th style="width: 25%;">Products</th>
          <th style="width: 10%;">Total Amount</th>
          <th style="width: 15%;">Payment Method</th>
          <th style="width: 15%;">Status</th>
          <th style="width: 10%;">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (order && order.length > 0) { %>
          <% order.forEach(order => { %>
            <tr>
              <td><%= order._id %></td>
              <td>
                <strong><%= order.userId.name %></strong><br>
                <small><%= order.userId.email %></small>
              </td>
              <td>
                <% order.items.forEach(item => { %>
                  <div class="product-details">
                    <img src="/uploads/re-image/<%= item.productId.productImage[0] %>" alt="Product Image" class="order-image">
                    <span><%= item.productId.productName %></span>
                  </div>
                <% }) %>
              </td>
              <td>â‚¹<%= order.total.toFixed(2) %></td>
              <td><%= order.paymentMethod %></td>
              <td>
                <span class="badge 
                  <%= order.orderStatus === 'Pending' ? 'status-pending' : '' %>
                  <%= order.orderStatus === 'Shipped' ? 'status-shipped' : '' %>
                  <%= order.orderStatus === 'Deliverd' ? 'status-deliverd' : '' %>
                  <%= order.orderStatus === 'Cancelled' ? 'status-cancelled' : '' %>
                  <%= order.orderStatus === 'Confirmed' ? 'status-confirmed' : '' %>
                  <%= order.orderStatus === 'Returned' ? 'status-returned' : ''%>">
                  <%= order.orderStatus %>
                </span>
              </td>
              <td>
                <a href="/admin/orderView/<%= order._id %>" class="btn btn-info btn-sm mb-1">View</a>
                <a href="/admin/orderEdit/<%= order._id %>" class="btn btn-primary btn-sm mb-1">Edit</a>
                <button class="btn btn-danger btn-sm">Delete</button>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="7" class="text-center">No orders found.</td>
          </tr>
        <% } %>    
      </tbody>
    </table>
  </div>

    <!--pagination-->
    <div class="pagination-container">
      <ul class="pagination">
        <%if(currentPage > 1){%>
              <li class="page-item">
                  <a class="page-link" href="?page=1">First</a>
              </li>
              <li class="page-item">
                  <a class="page-link" href="?page=<%= currentPage - 1%>">Previous</a>
              </li> 
        <%}%> 
        <%for(let i=1;i<=totalPages;i++){%>     
              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                  <a class="page-link" href="?page=<%= i %>"><%= i%></a>
              </li> 
        <%}%> 
        <%if(currentPage <= totalPages){%>     
              <li class="page-item">
                  <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
              </li>
              <li class="page-item">
                  <a class="page-link" href="?page=<%= totalPages%>">Last</a>
              </li>  
        <%}%>       
      </ul>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
