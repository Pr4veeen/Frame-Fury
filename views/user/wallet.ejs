<%-include("../../views/partials/user/header")%>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .wallet-card {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            color: white;
        }
        .transaction-item:not(:last-child) {
            border-bottom: 1px solid #e0e0e0;
        }
        .nav-pills .nav-link.active {
            background-color: #6a11cb;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <h1 class="text-center mb-5">My Wallet</h1>
        
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card wallet-card">
                    <div class="card-body">
                        <h5 class="card-title">Current Balance</h5>
                        <h2 class="card-text mb-4">$1,234.56</h2>
                        <div class="d-flex justify-content-between">
                            <button class="btn btn-light">Add Funds</button>
                            <button class="btn btn-outline-light">Withdraw</button>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Quick Actions</h5>
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary">Make a Payment</button>
                            <button class="btn btn-secondary">Transfer Funds</button>
                            <button class="btn btn-info">View Statements</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Recent Transactions</h5>
                        <ul class="nav nav-pills mb-3" id="transactions-tab" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="online-purchases-tab" data-bs-toggle="pill" data-bs-target="#online-purchases" type="button" role="tab" aria-controls="online-purchases" aria-selected="true">Online Purchases</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="funds-added-tab" data-bs-toggle="pill" data-bs-target="#funds-added" type="button" role="tab" aria-controls="funds-added" aria-selected="false">Funds Added</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="subscriptions-tab" data-bs-toggle="pill" data-bs-target="#subscriptions" type="button" role="tab" aria-controls="subscriptions" aria-selected="false">Payment Refunded</button>
                            </li>
                        </ul>
                        <div class="tab-content" id="transactions-tabContent">

                            <!-- purchase history -->

                            <div class="tab-pane fade show active" id="online-purchases" role="tabpanel" aria-labelledby="online-purchases-tab">
                                <ul class="list-unstyled">
                                    <% if (order.length > 0) { %>
                                        <% order.forEach((o) => { %>
                                          <li class="transaction-item py-3">
                                            <div class="d-flex justify-content-between align-items-center">
                                              <div>
                                                <h6 class="mb-1">Payment id : <span><%= o.paymentId %></span></h6>
                                                <small class="text-muted"><%=new Date(o.createdAt).toLocaleString()%></small>
                                              </div>
                                              <span class="text-danger">-₹ <%= o.total %></span>
                                            </div>
                                          </li>
                                        <% }) %>
                                    <% } %>
                                </ul>
                            </div>
                            <div class="tab-pane fade" id="funds-added" role="tabpanel" aria-labelledby="funds-added-tab">
                                <ul class="list-unstyled">
                                    <li class="transaction-item py-3">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Bank Transfer</h6>
                                                <small class="text-muted">May 30, 2023</small>
                                            </div>
                                            <span class="text-success">+$500.00</span>
                                        </div>
                                    </li>
                                    <li class="transaction-item py-3">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">PayPal Transfer</h6>
                                                <small class="text-muted">May 15, 2023</small>
                                            </div>
                                            <span class="text-success">+$250.00</span>
                                        </div>
                                    </li>
                                    <li class="transaction-item py-3">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Cash Deposit</h6>
                                                <small class="text-muted">May 5, 2023</small>
                                            </div>
                                            <span class="text-success">+$100.00</span>
                                        </div>
                                    </li>
                                </ul>
                            </div>

                            <!-- refund history -->

                            <div class="tab-pane fade" id="subscriptions" role="tabpanel" aria-labelledby="subscriptions-tab">
                                <ul class="list-unstyled">
                                    <%if(refundOrder.length > 0){%>  
                                        <%refundOrder.forEach((o)=>{%>     
                                    <li class="transaction-item py-3">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Payment id : <%= o.paymentId%></h6>
                                                <small class="text-muted"><%=new Date(o.createdAt).toLocaleString()%></small>
                                            </div>
                                            <span class="text-success">+₹ <%= o.total%></span>
                                        </div>  
                                    </li>
                                        <%})%>
                                    <%}%>  
                                </ul>
                            </div>
                        </div>
                        <div class="text-center mt-3">
                            <a href="#" class="btn btn-link">View All Transactions</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>




<%-include("../../views/partials/user/footer")%>