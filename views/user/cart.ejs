<%-include("../../views/partials/user/header")%>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <main class="main">
        <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a href="index.html" rel="nofollow">Home</a>
                    <span></span> Shop
                    <span></span> Your Cart
                </div>
            </div>
        </div>

        <style>
            .detail-qty {
                max-width: 113px;
                display: inline-flex;
                align-items: center;
                border: 1px solid #e2e8f0;
                border-radius: 9999px;
                overflow: hidden;
            }
        
            .qty-btn {
                background-color: #f7fafc;
                border: none;
                color: #4a5568;
                cursor: pointer;
                font-size: 16px;
                height: 30px;
                width: 30px;
                display: flex;
                align-items: center;
                justify-content: center;
                transition: background-color 0.2s;
            }
        
            .qty-btn:hover {
                background-color: #edf2f7;
            }
        
            .qty-val {
                font-size: 14px;
                padding: 0 10px;
                min-width: 30px;
                text-align: center;
            }
        
            .icon-minus-sign::before {
                content: "\2212";  /* Unicode for minus sign */
                font-style: normal;
            }
        
            .icon-plus-sign::before {
                content: "\002B";  /* Unicode for plus sign */
                font-style: normal;
            }
        </style>
          
        <section class="mt-50 mb-50">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table class="table shopping-summery text-center clean">
                                <thead>
                                    <tr class="main-heading">
                                        <th scope="col">Image</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Quantity</th>
                                        <th scope="col">Subtotal</th>
                                        <th scope="col">Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    
                                    <% if (cart.length> 0) { %>
                                        <% for (let item of cart) { %>
                                            <tr>
                                                <td class="image product-thumbnail">
                                                    <% if (item.productId.productImage &&
                                                        item.productId.productImage.length> 0) { %>
                                                        <img src="/uploads/re-image/<%= item.productId.productImage[0] %>"
                                                            alt="#">
                                                        <% } else { %>
                                                            <img src="/path-to-placeholder-image/placeholder.jpg"
                                                                alt="No Image">
                                                            <% } %>
                                                </td>
                                                <td class="product-des product-name">
                                                    <h5 class="product-name"><a href="#">
                                                            <%= item.productId.productName %>
                                                        </a></h5>
                                                    <p class="font-xs">
                                                        <%= item.productId.description || "No description available" %>
                                                    </p>
                                                </td>
                                                <td class="price" data-title="Price">
                                                    <%
                                                      const salePrice = item.productId.salePrice;
                                                      const productOffer = item.productId.offer || 0;
                                                      const categoryOffer = item.productId.category.categoryOffer || 0;
                                                  
                                                      // Calculate the best offer
                                                      const bestOffer = Math.max(productOffer, categoryOffer);
                                                  
                                                      // Calculate the final price after applying the best offer
                                                      const finalPrice = bestOffer > 0 ? Math.floor(salePrice - (salePrice * bestOffer / 100)) : salePrice;
                                                    %>
                                                  
                                                    <span><%= finalPrice %></span>
                                                  </td>
                                                  
                                                  <td class="text-center" data-title="Stock">
                                                    <div class="detail-qty border radius m-auto">
                                                        <button class="qty-btn qty-down" 
                                                                data-product-id="<%= item.productId._id %>"
                                                                onclick="updateCartQuantity('<%= item.productId._id %>', parseInt(document.querySelector('#qty-<%= item.productId._id %>').textContent) - 1)">
                                                            <i class="icon-minus-sign"></i>
                                                        </button>
                                                        <span class="qty-val" id="qty-<%= item.productId._id %>">
                                                            <%= item.quantity %>
                                                        </span>
                                                        <button class="qty-btn qty-up" 
                                                                data-product-id="<%= item.productId._id %>"
                                                                onclick="updateCartQuantity('<%= item.productId._id %>', parseInt(document.querySelector('#qty-<%= item.productId._id %>').textContent) + 1)">
                                                            <i class="icon-plus-sign"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                                <td class="text-right" data-title="Cart">
                                                    <span id="totalPrice-<%= item.productId._id %>">
                                                        <%= Math.floor(item.totalPrice.toFixed(2)) %>
                                                    </span>
                                                </td>
                                                
                                                <td class="action" data-title="Remove">
                                                    <a href="#" class="text-muted" 
                                                       onclick="RemoveFromCart('<%= item.productId._id %>')">
                                                        <i class="fi-rs-trash"></i>
                                                    </a>
                                                </td>
                                                
                                            </tr>
                                            <% } %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="6" class="text-end">
                                                            Oops.. No items found in Your Cart..!
                                                        </td>     
                                                    </tr>
                                                    <% } %>
                                </tbody>


                            </table>
                        </div>
                        <div class="cart-action text-end">
                            <a href="/userProfile#orders" class="btn  mr-10 mb-sm-15"><i class="fi-rs-shuffle mr-10"></i>Order History</a>
                            <a href="/shoppingPage" class="btn "><i class="fi-rs-shopping-bag mr-10"></i>Continue Shopping</a>
                        </div>
                        <div class="divider center_icon mt-50 mb-50"><i class="fi-rs-fingerprint"></i></div>
                        <div class="row mb-50">
                            <div class="col-lg-6 col-md-12">                                   
                            </div>
                            <div class="col-lg-6 col-md-12">
                                <div class="border p-md-4 p-30 border-radius cart-totals">                                  
                                    <a href="/checkOut" class="btn "> <i class="fi-rs-box-alt mr-10"></i> Proceed To
                                        CheckOut</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <%-include("../../views/partials/user/footer")%>

        <script>

            function RemoveFromCart(productId) {

                Swal.fire({
                    title: "Are You Sure.",
                    text: "You can't able to revert this item.",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d333",
                    confirmButtonText: "YES Remove it"

                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = `/removeFromCart/?productId=${productId}`
                    }
                })
                
            }
 
            


            async function updateCartQuantity(productId, quantity) {

                try {
                    const response = await fetch("/updateCartQuantity", {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ productId, quantity }),
                    });

                    const data = await response.json();
                    console.log("Response from server:", data);

                    if (data.status) {
                        // Update the specific quantity and price
                        const qtySpan = document.querySelector(`#qty-${productId}`);
                        const totalPriceSpan = document.querySelector(`#totalPrice-${productId}`);
                        const qtyUpBtn = document.querySelector(`.qty-up[data-product-id="${productId}"]`);
                        const qtyDownBtn = document.querySelector(`.qty-down[data-product-id="${productId}"]`);

                        qtySpan.textContent = data.quantity;
                        totalPriceSpan.textContent = Math.floor(data.totalPrice * data.quantity);

                        // Enable/disable buttons based on the updated quantity
                        if (data.quantity >= 5) {
                            qtyUpBtn.classList.add("disabled");
                            qtyUpBtn.style.pointerEvents = "none";
                            Swal.fire({
                                icon: "warning",
                                title: "Maximum Quantity Reached",
                                text: "You cannot add more than 5 units of this product.",
                                confirmButtonText: "OK",
                    });
                        } else {
                            qtyUpBtn.classList.remove("disabled");
                            qtyUpBtn.style.pointerEvents = "auto";
                        }

                        if (data.quantity <= 1) {
                            qtyDownBtn.classList.add("disabled");
                            qtyDownBtn.style.pointerEvents = "none";
                            Swal.fire({
                                icon: "warning",
                                title: "Minimum Quantity Reached",
                                text: "You must have at least 1 unit of this product.",
                                confirmButtonText: "OK",
                    });
                        } else {
                            qtyDownBtn.classList.remove("disabled");
                            qtyDownBtn.style.pointerEvents = "auto";
                        }
                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "Error",
                            text: data.message,
                            confirmButtonText: "OK",
                        });
                    }
                } catch (error) {
                    console.error("Error in updating cart quantity", error);
                    Swal.fire({ 
                        icon: "error",
                        title: "Error",
                        text: "Failed to update the cart. Please try again.",
                        confirmButtonText: "OK",
                    });
                }
            }



    
    
        </script>