<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Email</title>
    <!-- Include Bootstrap CSS for styling -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border: none;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 50px;
        }

        .card-header {
            background-color: #007bff;
            color: #fff;
            font-size: 1.25rem;
            font-weight: bold;
            text-align: center;
        }

        .form-control {
            border-radius: 0.25rem;
        }

        .btn-submit {
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 0.25rem;
        }

        .btn-submit:hover {
            background-color: #0056b3;
        }

        .text-muted {
            font-size: 0.9rem;
        }

        .required {
            color: red;
        }

        .text-danger {
            font-size: 0.85rem;
            margin-top: 5px;
            margin-bottom: -5px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Change your Account Password
                    </div>
                    <div class="card-body">
                        <p class="text-center text-muted">
                            Enter your new password below to update your account.
                        </p>
                        <form method="POST" action="/reset-Password" onsubmit="return validateForm()">
                            <!-- New Password -->
                            <div class="form-group">
                                <label for="newPass">New Password <span class="required">*</span></label>
                                <input required type="password" class="form-control" id="newPass" name="newPass"
                                    placeholder="Enter your new password">
                                <div id="newPassError" class="text-danger"></div>
                            </div>
                            <!-- Confirm New Password -->
                            <div class="form-group">
                                <label for="confirmPass">Confirm New Password <span class="required">*</span></label>
                                <input required type="password" class="form-control" id="confirmPass" name="confirmPass"
                                    placeholder="Re-enter your new password">
                                <div id="confirmPassError" class="text-danger"></div>
                            </div>
                            <!-- Submit Button -->
                            <button type="submit" class="btn btn-submit btn-block">
                                Update Password
                            </button>
                        </form>
                        <hr>
                        <p class="text-center">
                            <a href="/profile" class="text-primary">Back to Account Settings</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Include Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function validateForm() {
            let valid = true;
            const newPass = document.getElementById("newPass");
            const confirmPass = document.getElementById("confirmPass");
            const newPassError = document.getElementById("newPassError");
            const confirmPassError = document.getElementById("confirmPassError");

            newPassError.textContent = "";
            confirmPassError.textContent = "";

            if (!newPass.value.trim()) {
                newPassError.textContent = "Password can't be empty.";
                valid = false;
            } else if (newPass.value.length < 6) {
                newPassError.textContent = "Password must be at least 6 characters.";
                valid = false;
            }

            if (!confirmPass.value.trim()) {
                confirmPassError.textContent = "Please re-enter your password.";
                valid = false;
            } else if (confirmPass.value !== newPass.value) {
                confirmPassError.textContent = "Passwords do not match.";
                valid = false;
            }

            return valid;
        }
    </script>
</body>

</html>
